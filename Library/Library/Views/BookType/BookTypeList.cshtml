@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model List<BookType>
<h3 class="text-center">Kitap Tipi Listeleme Sayfası</h3>
<a class="btn btn-primary" style="float:right" asp-controller="BookType" asp-action="Create">Yeni Ekle</a>
<table class="table table-striped">
    <thead>
        <tr>
            <th>#</th>
            <th>Name</th>
            <th>Aksiyonlar</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Count; i++)
        {
        <tr>
            <th>@(i+1)</th>
            <td>@Model[i].Name</td>
            <td>
                <a class="big-icon" asp-controller="BookType" asp-action="Edit"><i class="bi bi-pencil-square"></i></a>
                <a class="big-icon margin-icon" asp-controller="BookType" asp-action="Delete"><i class="bi bi-x-circle-fill"></i></a>
            </td>
        </tr>
        }
    </tbody>
</table>