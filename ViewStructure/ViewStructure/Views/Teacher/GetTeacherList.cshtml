@{
    Layout = null;
    ViewData["HasFooter"] = true;
}

@model List<Teacher>
    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" 
        integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" 
          crossorigin="anonymous">
    <h3 style="text-align:center">Öğretmen Listesi</h3>
@await Component.InvokeAsync("WorkChart",new {id=1}) @*Bu şekilde parametre gönderebilirsin, Invokeda karşılaman lazım*@
    <div class="row row-cols-md-3">
        @foreach (Teacher item in Model)
        {
            <div class="col">
                <partial name="~/Views/Teacher/Partials/_TeacherInfoPartial.cshtml" model="@item"/>
            </div>
        }
    </div>